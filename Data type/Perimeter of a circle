import java.util.*;

class Perimeter 
{
  public static void main(String [] args){
    int r;
    double pi = 3.142,perimeter;
    Scanner s = new Scanner(System.in);
  
    System.out.print("Enter radius of circle:");
    r = s.nextInt();
    perimeter = 2 * pi * r;
    System.out.println("Perimeter of circle:"+perimeter);
    }
  } 
